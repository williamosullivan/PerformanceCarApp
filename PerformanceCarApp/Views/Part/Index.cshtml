@model IEnumerable<PerformanceCarApp.Models.Part>

@{
    ViewBag.Title = "Part Index";
}

<h2>Part Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form action="">
    <select name="Car">
        <option value="Volvo">Volvo</option>
        <option value="VW">VolksWagon</option>
        <option value="Chevrolet">Chevrolet</option>
        <option value="Ford">Ford</option>
        <option value="Dodge">Dodge</option>
        <option value="GMC">GMC</option>
    </select>
</form>
<table>
    <tr>
        <th>
            @Html.ActionLink("PartType", "Index", new { sortOrder=ViewBag.NameSortParm})
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PartType)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {id=item.PartID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PartID}) |
            @Html.ActionLink("Delete", "Delete", new {id=item.PartID})
        </td>
    </tr>
}

</table>
