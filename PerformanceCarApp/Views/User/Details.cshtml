    $(':radio').change(
function () {
    $('.choice').text(this.value + ' stars');
}
)
</script>
@model PerformanceCarApp.Models.User

@{
    ViewBag.Title = "Details";
}
<link rel="stylesheet" type="text/css" href="~/Content/Site.css">
<link rel="stylesheet" type="text/css" href="~/Content/Profile.css">
<h2></h2>

<div id="profile_main" style="font-weight: bold; color: #000000">
    <h4></h4>
    <hr />
    <div id="Pic">
        <div class="leftside">
            <img src="@Model.ImageURL" class="align-left large" />
        </div>
        <div id="UserName">
            @Html.DisplayFor(model => model.UserName)
        </div>
        <div id="Make">
            @Html.DisplayFor(model => model.Car.Make)
        </div>
        <div id="Model">
            @Html.DisplayFor(model => model.Car.Model)
        </div>
        <div id="Horsepower">
            Horsepower: &nbsp; &nbsp; @Html.DisplayFor(model => model.Horsepower)
        </div>
        <div id="QM">
            Quarter Mile: &nbsp; &nbsp; @Html.DisplayFor(model => model.QuarterMile)
        </div>
        <div id="Verified">
            <form action="demo_form.asp">
                <input type="checkbox" name="dyno" value="Dyno" checked> Dyno Verified HP<br>
                <input type="checkbox" name="slip" value="Slip" checked> Track Slip Verified QM
            </form>
        </div>
        <div id="description">
            <font color="#130e87">
                <strong>
                        Description: <br />                    
                    My 2013 vw golf r. mods include apr ecu tune, 42 draft designs turboback exhaust, cts turbo intake,
                    vmr510 19x8.5 wheels, michelin pilot super sport tires, kw coilovers, apr high pressure fuel pump,
                    blacked out sidemarkers, valentine one radar detector, backup camera, & 35% window tint.
                    please rate and enjoy!
                </strong>
            </font>
        </div>

        <br /><br />
            <div class="stars">
                <fieldset class="rating">
                    <p align="right"><font color="gold" style="font-weight:bold">Rate this Ride:</font></p>
                    <input type="radio" id="star5" name="rating" value="5" /><label for="star5" title="Rocks!">5 stars</label>
                    <input type="radio" id="star4" name="rating" value="4" /><label for="star4" title="Pretty good">4 stars</label>
                    <input type="radio" id="star3" name="rating" value="3" /><label for="star3" title="Meh">3 stars</label>
                    <input type="radio" id="star2" name="rating" value="2" /><label for="star2" title="Kinda bad">2 stars</label>
                    <input type="radio" id="star1" name="rating" value="1" /><label for="star1" title="Sucks big time">1 star</label>
                </fieldset>
            </div>
    </div>
</div>
<div class="rightside">
    <div id="HCB_comment_box">
        <a href="http://www.htmlcommentbox.com">Comment Box</a> is loading comments...
    </div>
    <link rel="stylesheet" type="text/css" href="//www.htmlcommentbox.com/static/skins/shady/skin.css" />
    <script type="text/javascript" id="hcb">
        if (!window.hcb_user) { hcb_user = {}; } (function () {
            var s = document.createElement("script"), l = ("" + window.location).replace(/'/g, "%27") || hcb_user.PAGE, h = "//www.htmlcommentbox.com";
            s.setAttribute("type", "text/javascript"); s.setAttribute("src", h + "/jread?page=" + encodeURIComponent(l).replace("+", "%2B") + "&opts=16862&num=10");
            if (typeof s != "undefined") document.getElementsByTagName("head")[0].appendChild(s);
        })(); hcb_user.submit = "";
    </script>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.UserID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
