@model IEnumerable<PerformanceCarApp.Models.Suspension>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" type="text/css" href="~/Content/style.css">
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.ActionLink("SuspensionName", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
           SuspensionDrop
        </th>
        <th>
           SuspensionWeightSave
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PartID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SuspensionDrop)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SuspensionWeightSave)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SuspensionName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SuspensionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SuspensionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SuspensionID })
        </td>
    </tr>
}

</table>
